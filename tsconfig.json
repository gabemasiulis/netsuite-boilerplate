{
    "compilerOptions": {
        "plugins": [],
        "module": "amd",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": false,
        "newLine": "LF",
        "experimentalDecorators": true,
        "noImplicitUseStrict": true,
        "noUnusedLocals": true,
        "allowJs": true,
        "baseUrl": ".",
        "lib": ["es5", "es2015.promise", "dom"],
        "outDir": "FileCabinet/SuiteScripts",
        "paths": {
            "N": ["./node_modules/@hitc/netsuite-types/N"],
            "N/*": ["./node_modules/@hitc/netsuite-types/N/*"],
            "/src/*": ["src/*"]
        }
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "FileCabinet"
    ]
}
