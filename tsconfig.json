{
    "compilerOptions": {
        "plugins": [
            {
                "name": "tslint-language-service",
                "alwaysShowRuleFailuresAsWarnings": false,
                "configFile": "./tslint.json",
                "disableNoUnusedVariableRule": false
            }
        ],
        "module": "amd",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": false,
        "newLine": "LF",
        "experimentalDecorators": true,
        "noImplicitUseStrict": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "lib": ["es5", "es2015.promise", "dom", "es2015"],
        "outDir": "FileCabinet/SuiteScripts",
        "rootDir": "./src",
        "paths": {
            "N": ["node_modules/@hitc/netsuite-types/N"],
            "N/*": ["node_modules/@hitc/netsuite-types/N/*"],
            "/src/*": ["src/*"]
        }
    },
    "compileOnSave": true,
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "FileCabinet"
    ]
}